<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.parse.starter.ui.NewMessageActivity"
                android:id="@+id/relativeLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Message Title Text"
            android:id="@+id/editTitle"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#1babe5"
            android:background="#d1ffde"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Express yourself"
            android:id="@+id/editMessage"
            android:background="#c2d1ff"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.37"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Post"
            android:id="@+id/btnSubmitMessage"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</RelativeLayout><!-- From: file:/Users/Guest/Desktop/Message%20Board/ParseStarterProject/src/main/res/layout/activity_new_message.xml -->